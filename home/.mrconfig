[DEFAULT]
lib = 
	  homeshick() {
	      $HOME/.homesick/repos/homeshick/bin/homeshick "$@"
	  }
	  link_castles() {
	      case "$MR_REPO" in
	      *.homesick/repos/dot*)
	          homeshick link -f ${MR_REPO##*/}
	          ;;
	      esac
	  }
	  hostname="$(hostname)"
	  on() {
	      for host in $@; do
	          if [ "$hostname" = "$host" ]; then
	              return 0
	          fi
	      done
	      return 1
	  }

post_checkout = link_castles
post_update = link_castles

[.homesick/repos/homeshick]
checkout = git clone 'git://github.com/andsens/homeshick.git' 'homeshick'
skip = [ "$1" = push ]

[.emacs.d]
checkout = git clone 'https://github.com/syl20bnr/spacemacs.git' '.emacs.d'
